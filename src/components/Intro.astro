---
import i18next, { t } from "i18next";
import { Trans, HeadHrefLangs } from "astro-i18next/components";
---

<section class="intro">
  <h1>
    {t("intro.title")}
    <!-- <img src="/images/2023-badge-1.png" class="mx-4 year" /> -->
    <div class="year-text">2025</div>
  </h1>
  <p class="text-neutral-900 desc">
    {t("intro.decs")}
  </p>
  <div class="wrapper w-[756px] max-lg:w-[756px] max-sm:w-[320px] items-center">
    <div class="icon-wrapper max-lg:border-b-[0.5px] lg:border-b-[0.5px]">
      <div class="svg-container">
        <div class="icon">
          <img src="/images/organizer.svg" class="b-u" />
        </div>
      </div>
    </div>
    <div class="intro-content rounded-[10px]">
      <p>
        <Trans i18nKey="intro.content-1">
          The hackathon is hosted by <b>ZJU Blockchain DAO</b> (Zhejiang University
          Blockchain Association), <b>PKU Blockchain DAO</b> and <b
            >WTF Academy</b
          >.
        </Trans>
      </p>
      <br>
      <p>
        <Trans i18nKey="intro.content-2">
          The hackathon is hosted by <b>ZJU Blockchain DAO</b> (Zhejiang University
          Blockchain Association), <b>PKU Blockchain DAO</b> and <b
            >WTF Academy</b
          >.
        </Trans>
      </p>
    </div>
    <div class="dot"></div>
  </div>
</section>

<style>
  .intro {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: visible;
  }
  h1 {
    display: flex;
    align-items: center;
    font-weight: 700;
    font-size: 36px;
    line-height: 44px;
    min-height: 44px;
    color: #000000;
    margin-bottom: 18px;
  }
  .desc {
    font-size: 18px;
    line-height: 150%;
    height: 27px;
    margin-bottom: 60px;
  }
  .wrapper {
    background: #ffffff;
    /* gray/400 */
    position: relative;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    border: 0.5px solid #9ca3af;
    box-shadow: 0px 2px 12px rgba(0, 0, 0, 0.06);
    border-radius: 10px;
    overflow: visible;
  }
  .icon-wrapper {
    /* display: flex;
    justify-content: center;
    align-items: center; */
    /* height: 229px; */
    width: 100%;
  }
  .year {
    height: 37px;
  }
  .name {
    font-weight: 600;
    font-size: 12px;
    line-height: 15px;
    /* identical to box height */
    text-align: center;
    /* neutral/900 */
    color: #171717;
  }
  .icon {
    padding-top: 0px;
    display: flex;
    height: 120px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .x {
    color: #9ca3af;
    margin: 0 20px;
    width: 10px;
  }
  .intro-content {
    padding: 30px;
    display: flex;
    background: #fff;
    flex-direction: column;
    justify-content: space-between;
    flex: 1;
  }
  .b-u {
    width: 756px;
  }
  .wtf {
    width: 140px;
  }
  .dot {
    z-index: -1;
    position: absolute;
    background: linear-gradient(112deg, #29c9a3 0%, #c1ecf2 64.33%);
    border-radius: 925925px;
    width: 200px;
    height: 200px;
    right: -80px;
    bottom: -60px;
  }
  .year-text {
    background: linear-gradient(101deg, #30328B 0%, #FFC54A 150.3%);
    font-family: Lato;
    font-size: 26px;
    border-radius: 4px;
    font-weight: 700;
    line-height: 31px;
    letter-spacing: 0em;
    text-align: left;
    color: #fff;
    padding: 3px 10px;
    margin-left: 8px;
  }
  .zju {
    width: 140px;
  }

  .svg-container {
    padding: 16px;
  }
</style>
